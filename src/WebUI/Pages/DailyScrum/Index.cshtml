@page "/daily-scrum"
@model Index

<h1>Daily Scrum</h1>

<p>Let's make the daily scrum great again.</p>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom: 20px">
                <label asp-for="ClientDays" class="control-label">Days until client booking:</label>
                <input asp-for="ClientDays" class="form-control" />
                <span asp-validation-for="ClientDays" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 20px">
                <label asp-for="LastWorkingDay" class="control-label">Last Working Day:</label>
                <input type="date" asp-for="LastWorkingDay" class="form-control" />
                <span asp-validation-for="LastWorkingDay" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Email</button>
            </div>
        </form>
    </div>
</div>
