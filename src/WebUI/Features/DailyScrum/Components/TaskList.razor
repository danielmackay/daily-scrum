@using WebUI.Features.DailyScrum.Queries
<ul>
    @foreach (var project in Projects)
    {
    <li>@project.Name</li>
    <ul>
        @foreach (var task in project.Tasks)
        {
        <li>@task.Name</li>
        }
    </ul>
    }

    @foreach (var task in Tasks)
    {
    <li>@task.Name</li>
    }
</ul>

@code {
    [Parameter] public required IEnumerable<ProjectViewModel> Projects { get; set; }
    [Parameter] public required IEnumerable<TaskViewModel> Tasks { get; set; }
}
